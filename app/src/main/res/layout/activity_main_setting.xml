<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingyuyou.xingyuyou.activity.SettingActivity">
    <include layout="@layout/toolbar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="个人资料"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_feed_back"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="应用反馈"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_clean_cache"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="清楚缓存"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_version_code"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="版本号"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout> <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_user_rule"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="用户公约"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_check_update"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="检查更新"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <!--<Switch
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:id="@+id/toggleButton"/>-->
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:text="关于我们"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <Button
        android:layout_margin="10dp"
        android:text="退出登录"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/bt_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
