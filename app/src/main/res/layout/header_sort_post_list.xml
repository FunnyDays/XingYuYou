<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@color/lightColorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/tag_text_view_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="攻略"
        android:textColor="@color/white"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/iv_class_label"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/tv_post_num"
        android:textColor="@color/white"
        tools:text="帖子数量：554"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_post_describe"
        android:textColor="@color/white"
        tools:text="帖子数量：554"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_post_num"
        android:layout_toRightOf="@+id/iv_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/iv_class_label"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>
