<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/cl_item_onclick"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.xingyuyou.xingyuyou.activity.Main2Activity">

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/guanyu"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        tools:text="昵称"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_reply_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        tools:text="昵称"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tv_reply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        tools:text="昵称"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_reply_content"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        tools:text="昵称"
        android:background="@drawable/user_my_reply_textview_bg"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply_title"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_reply_title"/>

    <TextView
        android:id="@+id/tv_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="昵称"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_photo"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/custom_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_reply_time"/>
</android.support.constraint.ConstraintLayout>